<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/word_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.cqut.learn.CustomView.MyScrollView
        android:scrollbars="none"
        android:id="@+id/activity_learn_content_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="InnerclassSeparator">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"
                android:text="congratulations"
                android:id="@+id/word_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/phone"
                android:layout_below="@+id/word_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_below="@+id/word_content_text"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#000000"
                        android:id="@+id/word_content_phonetic_en"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="英"
                        android:layout_margin="5dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="[kənˈgrætjuleit]"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:layout_margin="5dp"
                        android:id="@+id/word_content_speaker_en"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/activity_learn_content_speaker" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/part_up"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.cqut.learn.CustomView.MyTextView
                        android:textColor="#000000"
                        android:id="@+id/word_content_phonetic_cn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="美"
                        android:layout_margin="5dp"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="[kənˈgrætjuleit]"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_margin="5dp"
                        android:id="@+id/word_content_speaker_us"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/activity_learn_content_speaker" />
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/img"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/phone"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               app:cardCornerRadius="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:background="@drawable/activity_main_search_top_root_background"
                   android:padding="20dp"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   >
                   <ImageView
                       android:id="@+id/word_content_image"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="5dp"
                       android:src="@drawable/con1" />

                   <com.cqut.learn.CustomView.MyTextView
                       android:layout_margin="5dp"
                       android:layout_gravity="center"
                       android:id="@+id/word_content_trans_cn"
                       android:text="n. 恭喜,adj. 祝贺"
                       android:textSize="30dp"
                       android:textColor="#000000"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/root"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_below="@id/img"
                android:background="@drawable/rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.cqut.learn.CustomView.MyTextView
                    android:layout_marginLeft="2dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同根词"
                    />
                <com.cqut.learn.CustomView.MyTextView
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:id="@+id/word_content_root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. n. congratulate 祝贺\n2. adv. congratulations 祝贺111111" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/phrase"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_below="@id/root"
                android:background="@drawable/rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.cqut.learn.CustomView.MyTextView
                    android:layout_marginLeft="2dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短语："
                    />
                <com.cqut.learn.CustomView.MyTextView
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:id="@+id/word_content_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="congratulate on 祝贺祝贺\ncongratulate sb. on 祝贺祝贺2\n" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sentence"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_below="@id/phrase"
                android:background="@drawable/rectangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.cqut.learn.CustomView.MyTextView
                    android:layout_marginLeft="2dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="例句："
                    />
                <com.cqut.learn.CustomView.MyTextView
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:id="@+id/word_content_sentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. congratulate to your birthday 祝贺你生日快乐 \n 2. congratulation on the great success of Mountains and river Tour and huangsgan international travleing  festivel 祝贺黄山国际旅游节圆满成功\n" />

            </LinearLayout>
            <Button
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerInParent="true"
                android:background="@drawable/rectangle"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/sentence"
                android:id="@+id/word_content_bt_next"
                android:gravity="center"
                android:textSize="20sp"
                android:text="下一个"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </com.cqut.learn.CustomView.MyScrollView>
</FrameLayout>
