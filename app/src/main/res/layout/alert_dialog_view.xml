<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="@string/parsing"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:id="@+id/alert_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <ProgressBar
          android:id="@+id/alert_dialog_progress"
          android:max="3739"
          style="@style/Widget.AppCompat.ProgressBar.Horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/alert_dialog_text_progress"
          android:layout_margin="5dp"
          android:layout_gravity="end"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_margin="10dp"
          android:textColor="@color/colorTextBackgroundSelected"
          android:textSize="15sp"
          android:id="@+id/alert_dialog_view_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/></LinearLayout>
  </androidx.cardview.widget.CardView>

