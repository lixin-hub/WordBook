<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/activity_main_bottom_card_root_affix"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/end_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/end_2"
                android:layout_margin="5dp"
                android:text="@string/activity_main_end_reading"
                android:textColor="@color/colorText"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/end_2"
                android:layout_margin="5dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/activity_main_end_reading"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <TextView
                android:id="@+id/activity_main_end_article_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/end_1"
                android:layout_toRightOf="@id/end_2"
                android:layout_margin="2dp"
                android:text="《假如给我三天光明》"
                android:textColor="@color/colorTextBackgroundSelected"
                android:textStyle="italic" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
