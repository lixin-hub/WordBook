<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <androidx.cardview.widget.CardView
       android:id="@+id/mid_0"
       android:layout_margin="10dp"
       app:cardCornerRadius="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/activity_main_search_top_root_background"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/mid_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/task"
            android:textColor="@color/colorText"
            android:textSize="30sp" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/activity_main_mid_new_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Dog "
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/activity_main_mid_new_word_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_main_mid_new_word"
            android:layout_centerHorizontal="true"
            android:text="n.狗 "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="italic"
            android:id="@+id/mid_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mid_1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:text="需新学 "
            android:textColor="@color/colorText"
            android:textSize="25sp" />
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="italic"
            android:id="@+id/mid_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mid_1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:text="需复习 "
            android:textColor="@color/colorText"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/mid_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mid_2"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:text="10个"
            android:textColor="@color/colorText"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/mid_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mid_2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="10dp"
            android:text="20个"
            android:textColor="@color/colorText"
            android:textSize="20sp" />
        <Button
            android:text="开始学习吧！"
            android:layout_margin="20dp"
            android:background="@drawable/activity_main_mid_bt_learn_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mid_5"
            android:id="@+id/activity_main_mid_bt_start_learn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
   </androidx.cardview.widget.CardView>
</LinearLayout>
